@{
    ViewData["Title"] = "Register confirmation";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="register-confirmation text-center">
            <div class="success-icon mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-envelope text-primary" viewBox="0 0 16 16">
                    <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"/>
                </svg>
            </div>
            
            <h1 class="mb-3">@ViewData["Title"]</h1>
            <p class="lead mb-4">
                Thank you for registering! We've sent a confirmation email to <strong>@ViewBag.Email</strong>.
                Please check your email and confirm your account.
            </p>
            
            <div class="alert alert-info" role="alert">
                <small>
                    In a real application, you would need to confirm your email before logging in.
                    For this demo, you may proceed to log in.
                </small>
            </div>
            
            <a asp-action="Login" class="btn btn-primary mt-3">Proceed to login</a>
        </div>
    </div>
</div>